<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title_text"
            android:text="@string/title_text"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:padding="20dp"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/enter_title"
            android:hint="@string/enter_title"
            android:inputType="textCapSentences"
            android:layout_below="@+id/title_text"
            android:imeOptions="actionDone"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/for_who_text"
            android:padding="20dp"
            android:layout_below="@+id/enter_title"
            android:layout_marginTop="20dp"
            android:text="@string/for_who_text"
            android:textColor="@color/black"
            android:textSize="25sp"/>

        <Spinner
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/name_spinner"
            android:layout_below="@+id/for_who_text"
            android:background="@drawable/gradient_spinner" />
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:id="@+id/upload_task"
            android:layout_weight="1"
            android:background="@drawable/upload_task_style"
            android:drawableTop="@drawable/ic_action_upload"
            android:drawablePadding="-20dp"
            android:paddingTop="8dp"
            android:text="@string/button_upload"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textAllCaps="false" />

        <!--
        <Button
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/cancel_task"
            android:layout_weight=".3"
            android:background="@drawable/logout_button_style"
            android:drawableStart="@drawable/ic_task_cancel"
            android:text="@string/button_cancel"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textAllCaps="false" />
            -->
    </LinearLayout>

</RelativeLayout>
